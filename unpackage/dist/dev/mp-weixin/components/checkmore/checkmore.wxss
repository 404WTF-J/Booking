.checkinstru {
	width: 100%;
	height: 300rpx;
	position: absolute;
	top: 88%;
	left: 2%;
}
.decscript {
	width: 95%;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between;
	padding: 10rpx;
	align-items: center;
	font-weight: 600;
	text-align: center;
}
.checkbtn {
	width: 25%;
	text-align: center;
	position: relative;
}
.checkbtn::before {
	content: "";
	width: 20rpx;
	height: 20rpx;
	border: 1px solid black;
	border-left: 0 transparent;
	border-bottom: transparent;
	/* transform: rotate(45deg); */
	transform: translate(0px, 5px) rotate(45deg);
	position: absolute;
	right: 0;
}
.personCard {
	width: 95%;
	height: 260rpx;
	border-radius: 20rpx;
	/* border: 1px solid violet; */
	background-color: #fefefe;
	display: flex;
	flex-wrap: nowrap;
	overflow: hidden;
	overflow-x: auto; /* 水平滚动 */
	-webkit-overflow-scrolling: touch; /* 在 iOS 上启用平滑滚动 */
}
.persons{
	height: 100%;
	padding: 13px 13rpx 0 13rpx;
	text-align: center;
}
.personimg{
	width: 180rpx;
	height: 180rpx;
	border: 1px solid black;
	border-radius: 50%;
	overflow: hidden;
}
.personimg image{
	width: 100%;
	height: 100%;
}
.personName{
	height: 40rpx;
}
