.CustomizeNav {
  height: 80rpx;
  display: flex;
  box-sizing: border-box;
  margin-top: 100rpx;
  font-weight: 500;
  font-size: 35rpx;
  color: black;
  justify-content: space-evenly;
  align-items: center;
  position: relative;
}
.uicon {
  position: absolute;
  left: 10rpx;
  top: 0;
}
.container {
  padding-bottom: 100rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.user-section {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 300rpx;
  justify-content: space-around;
}
.user-section .user-header {
  text-align: center;
  margin-bottom: 15rpx;
}
.user-section .user-header .headimg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}
.user-section .user-header .subtitle {
  font-size: 24rpx;
  color: #999;
}
.user-section .user-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.user-section .user-info .phone {
  font-size: 24rpx;
  margin-right: 10rpx;
}
.user-section .member-rights {
  text-align: right;
  color: #666;
  font-size: 14rpx;
}
.card-section {
  background-color: #fff;
  padding: 15rpx;
  margin-bottom: 10rpx;
}
.card-section .card-yue {
  display: flex;
  align-items: center;
  height: 100rpx;
}
.card-section .card-yue .member-tag {
  background-color: #f0f0f0;
  color: #666;
  padding: 4rpx 18rpx;
  border-radius: 20rpx;
  margin: 0rpx 20rpx 0rpx 15rpx;
}
.card-section .card-row {
  display: flex;
  margin-bottom: 15rpx;
}
.card-section .card-row:last-child {
  margin-bottom: 0;
}
.card-section .card-item {
  flex: 1;
  text-align: center;
}
.card-section .card-item .card-label {
  display: block;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 5rpx;
}
.card-section .card-item .card-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
}
.menu-section {
  background-color: #fff;
}
.menu-section .menu-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.menu-section .menu-item:last-child {
  border-bottom: none;
}
.menu-section .menu-divider {
  height: 10rpx;
  background-color: #f5f5f5;
}
.logout-section {
  margin: 20rpx;
}
.logout-section button {
  background-color: #fff;
  color: #f56c6c;
  border: 1rpx solid #f56c6c;
}