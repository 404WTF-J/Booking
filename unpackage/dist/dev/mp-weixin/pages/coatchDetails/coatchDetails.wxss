.container {
  height: 100vh;
  padding: 20rpx;
  background-color: #f5f5f5;
}
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
}
.header .back-icon {
  font-size: 40rpx;
}
.header .title {
  font-size: 32rpx;
  font-weight: bold;
}
.header .header-icons {
  display: flex;
  gap: 10rpx;
}
.header .header-icons .icon {
  font-size: 28rpx;
}
.coach-info {
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.coach-info .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.coach-info .info {
  margin-left: 20rpx;
}
.coach-info .info .name {
  font-size: 32rpx;
  font-weight: bold;
}
.coach-info .info .experience {
  font-size: 24rpx;
  color: #666;
}
.intro {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.intro .intro-title {
  font-size: 28rpx;
  font-weight: bold;
}
.intro .intro-content {
  font-size: 24rpx;
  color: #666;
}
.course-list .course-item {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}
.course-list .course-item .course-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}
.course-list .course-item .course-details {
  flex: 1;
  margin-left: 20rpx;
}
.course-list .course-item .course-details .course-name {
  font-size: 28rpx;
  font-weight: bold;
}
.course-list .course-item .course-details .course-rating {
  margin: 10rpx 0;
}
.course-list .course-item .course-details .course-price {
  font-size: 24rpx;
  color: #666;
}
.course-list .course-item .book-button {
  background-color: #007aff;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
  font-size: 24rpx;
}